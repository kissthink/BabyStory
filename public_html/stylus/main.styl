@import 'nib'
@import 'normalize' 

box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments
	
opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

a
	color #080808
	text-decoration none
	&:hover
		color #080808
		text-decoration none

body
	font-size 16px


.barra-logo
	height 2em
	width 100%
	background #C10BFD
	box-shadow #080808
	position relative
	box-shadow 0 5px 10px 0 #080808
	margin 4em 0 0
	& .barra-interna-logo
		position absolute
		height 2em
		width 50%
		top 0px
		right 0px
		background #FD0B84


.btn-ovalado
	border-radius 25%
	float right

.centrar-contenido
	padding 80px 100px

.logo-chico
	text-align center
	margin 0
	& img
		height 3em

.padding-izquierdo
	padding-left 2em

.sin-padding
	padding none

.relative 
	position relative

.remember-me
	float right

.redes-sociales
	background url('../img/redes-sociales.png')
	display inline-block
	vertical-align top
	&.facebook
		background-position -0px -0px 
		width 64px 
		height 62px
	&.googleplus
		background-position -0px -72px 
		width 64px 
		height 64px
	&.twitter
		background-position -0px -146px 
		width 64px 
		height 61px

#logo
	text-align center
	width 100%
	padding .5em
	margin 0
	position absolute
	top 0px
	left 0px
	& img
		height 3em

#portada
	text-align center
	width 100%
	padding 8em 0
	margin 0
	& img
		height 300px


/*
	Recuperar
*/

.form-recuperar
	position absolute 
	top 200px
	text-align center
	height 200px
	margin -100px 10% 0
	border 2px solid black
	width 80%
	& .mensaje-form-recuperar
		position absolute
		top 50%
		left 0px
		z-index 3
		color #080808
		font-size 1em
		font-weight normal
		width 100%
		text-align center
		margin-top -1em
		&.label
			top 30%
			margin-top 0px
	&:after
		content ''
		border-top 10px solid #333
		border-bottom 10px solid transparent
		border-left 10px solid transparent
		border-right 10px solid transparent
		position absolute
		bottom -20px
		left 50%
		margin-left -5px
		z-index 3
	& figure
		position absolute 
		padding 1em
		bottom -75px
		width 100%
		text-align center
		left 5px

/* form registro */

.agregarNinos
	background #CEDBDE
	margin 0px .5em 1em 
	padding 1em
	& input[type="text"]
		border none
		background transparent
		text-align center
		padding .3em
	& img.flecha
		height 30px
	
		

.form-registro
	position relative
	& figure
		margin 0
		padding 0
	& #imagen-usuario
		overflow hidden
		& img
		& figcaption
			display inline-block
			vertical-align middle
		& figcaption
			margin-left 2px
	& input
	& textarea
		margin-bottom .2em
		border 2px solid #080808
	& .form-control 
		position relative
		height auto
		box-sizing border-box
		padding .6em
		font-size 1em



/*
    Login
*/

.form-signin 
	width 100%
	padding 3em 1em 1em
	margin 0 auto

.form-signin .checkbox 
	margin-bottom .9em
	font-weight normal
	


.form-signin-heading 
	text-align center
	font-size 1.5em
	& span
		font-size .7em


.form-signin .form-control 
	position relative
	height auto
	box-sizing border-box
	padding .6em
	font-size 1em

.form-signin .form-controlfocus 
	z-index 2

.form-signin input[type="email"]
.form-signin input[type="password"] 
	margin-bottom .4em
	border 2px solid #080808
