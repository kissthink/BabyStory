{% extends '::admin.html.twig' %}

{% block body %}
<div class="container">
    <h1>Editar historia</h1>
    <form action="{{ path('historias_update',{'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
        <input name="_method" value="put" type="hidden"/>
        {{ form_errors(form) }}
         <fieldset>
            <div class="form-group">
                 {{ form_row(form.hijo) }}
            </div>
            <div class="form-group">
                 {{ form_row(form.usuario) }}
            </div>
            <legend>Historia</legend>
             <div class="form-group">
                 {{ form_row(form.historia) }}
             </div>
             <div class="form-group">
                 {{ form_row(form.fecha) }}
             </div>
        </fieldset>
        <hr/>
        
        <div class="container">
        <a href="{{path('historias')}}" class="btn btn-success">Regresar</a>
        <input type="submit" class="btn btn-primary" name="botonGuardar" id="botonGuardar" value="Guardar"/>
        </div>
        {{ form_rest(form) }}
    </form>
</div>
{% endblock %}

