{% extends '::admin.html.twig' %}

{% block body -%}
    {% include 'FrontendBundle:Default:navegador.html.twig' with {'tabActive': 'historias' } %}
    <div class="tab-content">
        <div id="historias" class="tab-pane active">
            <div class="container text-left">
                <form action="{{path('historias')}}" class="navbar-form navbar-left pull-center" role="search">
                    <div class="form-group">
                        <input class="form-control" placeholder="Buscar Historia" type="text" name="buscar">
                    </div>
                    <button type="submit" class="btn btn-default">
                        Buscar
                    </button>
                </form>
            </div>
            <div class="container text-center">
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        Historias
                    </div>
                    <!-- Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="text-center">
                                Id
                            </th>
                            <th class="text-center">
                                Usuario
                            </th>
                            <th class="text-center">
                                Fecha
                            </th>
                            <th class="text-center">
                                Historia
                            </th>
                            <th class="text-center">
                                Accion
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for historia in pagination %}
                        <tr>
                            <td>
                                {{ historia.id }}
                            </td>
                            <td>
                                {{ historia.usuario }}
                            </td>
                            <td>
                                {{ historia.fecha | date('d-m-Y') }}
                            </td>
                            <td>
                                {{ historia.historia }}
                            </td>
                            <td>
                                <a href="{{ url('historias_show', { 'id' : historia.id }) }}" class="btn btn-success">Ver</a>
                                <a href="{{ url('historias_edit', { 'id' : historia.id }) }}" class="btn btn-info">Editar</a>
                                <!--a href="javascript: if (confirm('Desea elminar el historia seleccionado?')) { location.href='{{ url('historias_delete', { 'id' : historia.id }) }}';}" class="btn btn-danger">Eliminar</a-->
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="container">
                    <a href="{{ path('historias_new') }}" class="btn btn-primary pull-left">Nuevo Historia</a>
                    <a href="{{ path('historias_export') }}" class="btn btn-default pull-right">Exportar</a>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
        
    </div>
    <div class="container text-center">
        <h5>
            Baby Story
        </h5>
    </div>
{% endblock %}

