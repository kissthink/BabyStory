{% extends '::admin.html.twig' %}

{% block body -%}
    {% include 'FrontendBundle:Default:navegador.html.twig' with {'tabActive': 'usuarios' } %}
    <div class="tab-content">
        <div id="usuarios" class="tab-pane active">
            <div class="container text-left">
                <form action="{{path('usuarios')}}" class="navbar-form navbar-left pull-center" role="search">
                    <div class="form-group">
                        <input class="form-control" placeholder="Buscar Usuario" type="text" name="buscar">
                    </div>
                    <button type="submit" class="btn btn-default">
                        Buscar
                    </button>
                </form>
            </div>
            <div class="container text-center">
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        Usuarios
                    </div>
                    <!-- Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="text-center">
                                Usuario
                            </th>
                            <th class="text-center">
                                Ciudad
                            </th>
                            <th class="text-center">
                                Email
                            </th>
                            <th class="text-center">
                                Biografia
                            </th>
                            <th class="text-center">
                                Activo
                            </th>
                            <th class="text-center">
                                Accion
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for usuario in pagination %}
                        <tr>
                            <td>
                                {{ usuario.username }}
                            </td>
                            <td>
                                {{ usuario.ciudad }}
                            </td>
                            <td>
                                {{ usuario.email }}
                            </td>
                            <td>
                                {{ usuario.biografia }}
                            </td>
                            <td>
                                {% if usuario.isActive %}
                                    <span class="glyphicon glyphicon-ok"></span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ url('usuarios_show', { 'id' : usuario.id }) }}" class="btn btn-success">Ver</a>
                                <a href="{{ url('usuarios_edit', { 'id' : usuario.id }) }}" class="btn btn-info">Editar</a>
                                <!--a href="javascript: if (confirm('Desea elminar el usuario seleccionado?')) { location.href='{{ url('usuarios_delete', { 'id' : usuario.id }) }}';}" class="btn btn-danger">Eliminar</a-->
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="container">
                    <a href="{{ path('usuarios_new') }}" class="btn btn-primary pull-left">Nuevo Usuario</a>
                    <a href="{{ path('usuarios_export') }}" class="btn btn-default pull-right">Exportar</a>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
        
    </div>
    <div class="container text-center">
        <h5>
            Baby Story
        </h5>
    </div>
{% endblock %}

