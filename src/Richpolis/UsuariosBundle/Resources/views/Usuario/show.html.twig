{% extends '::admin.html.twig' %}

{% block body -%}
    <div class="container">
    <h1>Usuario "{{entity.username}}"</h1>
    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Ciudad</th>
            </tr>
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.ciudad }}</td>
            </tr>
            <tr>
                <th>Es</th>
                <th>Biografia</th>
                <th >Ser {{entity.stringSexo}}</th>
                <th>Imagen</th>
            </tr>
            <tr>
                <td>{{ entity.stringSexo }}</td>
                <td>{{ entity.biografia }}</td>
                <td>{{ entity.serMadre }}</td>
                <td>
                    {% if entity.imagen | length > 0 %}
                    <img src="/apps/babystory/web{{entity.thumbnailWebPath}}" />    
                    {% else %}    
                    <img src="{{asset('images/sin-imagen-usuario.png')}}"/>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    <h2>Hijos</h2>
    <table class=" table table-striped"> 
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apodo</th>
            <th>Biografia</th>
            <th>Imagen</th>
        </tr>
     </thead>
     <tbody>
         {% for hijo in entity.hijos %}
            <tr>
                <td>{{hijo.nombre}}</td>
                <td>{{hijo.apodo}}</td>
                <td>{{hijo.biografia}}</td>
                <td>
                    {% if hijo.imagen | length > 0 %}
                    <img src="/apps/babystory/web{{hijo.thumbnailWebPath}}" />    
                    {% else %}    
                    <img src="{{asset('images/sin-imagen-usuario.png')}}"/>
                    {% endif %}
                </td>
            </tr>
         {% endfor %}   
     </tbody>   
    </table>      
</div>
<p> &nbsp; </p>
<div class="container text-center">            
<ul class="record_actions list-inline">
    <li>
        <a href="{{ path('usuarios') }}" class="btn btn-primary">
            Regresar
        </a>
    </li>
    <li>
        <a href="{{ path('usuarios_edit', { 'id': entity.id }) }}" class="btn btn-success">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>    
{% endblock %}
