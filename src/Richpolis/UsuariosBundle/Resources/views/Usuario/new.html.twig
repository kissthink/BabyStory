{% extends '::admin.html.twig' %}

{% block body %}
<div class="container">
    <h1>Editar usuario</h1>
    <form action="{{ path('usuarios_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        <fieldset>
            <legend>Datos de acceso</legend>
            <div class="form-group">
                {{ form_errors(form.username)}}
                {{ form_widget(form.username) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.password) }}
                {{ form_widget(form.password) }}
            </div>
            {% if is_granted('ROLE_ADMIN')%}
            <div class="form-group">
                <div class="col-lg-2">
                {{ form_row(form.rol) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(form.isActive) }}
            </div>    
            {% endif %}
         </fieldset>
        <hr/>
        <fieldset>
            <legend>Datos personales</legend>
             <div class="form-group">
                 {{ form_widget(form.email) }}
             </div>
             <div class="form-group">
                 {{ form_row(form.sexo)}}
             </div>
             <div class="form-group">
                 {{ form_widget(form.ciudad) }}
             </div>
             <div class="form-group">
                 {{ form_widget(form.biografia)}}
             </div>
             <div class="form-group">
                 {{ form_widget(form.serMadre) }}
             </div>
             <div class="form-group">
                 {{ form_widget(form.file) }}
             </div>
        </fieldset>
        <hr/>
        
        <div class="container">
        <a href="{{path('usuarios')}}" class="btn btn-success">Regresar</a>
        <input type="submit" class="btn btn-primary" name="botonGuardar" id="botonGuardar" value="Guardar"/>
        </div>
        {{ form_rest(form) }}
    </form>
</div>
{% endblock %}

{% block javascripts %}
    <script>    
    $(document).ready(function(){
        $("#form_usuario").addClass('form-control');
        $("input[type=password]").addClass('form-control');
        $("#form_password_first").val("");
    });
    </script>
{% endblock %}
