{% if compartir is not defined %}
    {% set compartir = false %}
{% endif %} 
<div class="row dialogo diagolo-papa"  id="componente-{{componente.id}}">
    <div class="col-xs-2 col-sm-2 col-md-2 text-center">
        <span>
            {% if componente.papa.sexo > 0 %}
            {{ componente.papa.stringSexo }}
            {% else %}
            {{ componente.papa }}
            {% endif %}    
        </span>
        <figure class="dialogo-papa-imagen">
            {% if componente.papa.imagen | length > 0 %}
                <img src="{{constant('Richpolis\\FrontendBundle\\Controller\\DefaultController::RUTA_WEB')}}{{componente.papa.thumbnailWebPath}}" style="max-width: 100px;"/>    
            {% else %}    
                <img src="{{asset('images/sin-imagen-usuario.png')}}"/>
            {% endif %}
        </figure>
    </div>
    <div class="col-xs-9 col-sm-9 col-md-9">
        <div class="comentarioPapa row">
            {% if compartir == false and  componente.historia.usuario.id == app.user.id %}
                <div class="col-xs-2 col-xs-offset-10 col-sm-2 col-sm-offset-10 col-md-2 col-md-offset-10"> 
                 <button onclick="if(confirm('Desea eliminar el dialogo?')){eliminarComponente({{componente.id}});}" class="btn btn-mini btn-danger" style="max-width: 100px;">Eliminar</button>
                </div> 
             {% endif %}
            <p class="col-xs-12 col-sm-12 col-md-12">
                {{componente.componente}}
            </p>
        </div>
    </div>
</div>
