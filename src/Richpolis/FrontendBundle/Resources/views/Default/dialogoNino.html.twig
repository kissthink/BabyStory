<div class="row dialogo dialogo-nino" id="componente-{{componente.id}}">
    <div class="col-xs-9 col-xs-offset-1 col-sm-9 col-sm-offset-1 col-md-9">
        {% if componente.historia.usuario.id == app.user.id %}
        <button onclick="eliminarComponente({{componente.id}})" class="btn btn-danger">Eliminar</button>
        {% endif %}
        <div class="comentarioNino row">
            <p>
                {{ componente.componente }}
            </p>
        </div>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 text-center">
        <span>{{ componente.hijo }}</span>
        <figure class="dialogo-nino-imagen">
            {% if componente.hijo.imagen | length > 0 %}
                <img src="{{constant('Richpolis\\FrontendBundle\\Controller\\DefaultController::RUTA_WEB')}}{{componente.hijo.thumbnailWebPath}}" style="max-width: 100px;"/>    
            {% else %}    
                <img src="{{asset('images/sin-imagen-usuario.png')}}"/>
            {% endif %}
        </figure>
    </div>
</div>
