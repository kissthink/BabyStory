{% extends '::base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.message | trans }}</div>
    {% endif %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice alert alert-success">
          {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="flash-notice alert alert-danger">
          {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="form-box" id="login-box">
        <div class="header">
            <h3>
                Ingreso
            </h3>
        </div>
        <form action="{{ path('login_check') }}" method="post">
            <div class="body bg-gray">
                <div class="form-group">
                    <input id="username" type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="usuario">
                </div>
                <div class="form-group">
                    <input id="password" type="password" name="_password" class="form-control" placeholder="password">
                </div>
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" checked />
                    Recuerdame
                </div>
            </div>
            <input type="submit" name="login" class="btn btn-primary" value="Entrar" />
            <div class="footer">
                <p>
                    <a href="{{path('madero_front_end_recuperar')}}">Olvide mi contrase√±a</a>
                </p>
                <a href="{{path('madero_front_end_registro')}}" class="text-center">Registrarme</a>
            </div>
        </form>
    </div>
<script  src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        setTimeout(function(){
            $(".alert").fadeOut('slow');
        },2000);
    });
</script>
{% endblock %}